generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Prescription {
  id           String   @id @default(uuid())
  medicalRecord String
  name          String
  medicine      String
  unit          String
  dose          Float
  via           String
  posology      String
  posologyDays  String[]

  @@map("prescriptions")
}
