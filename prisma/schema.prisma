generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Prescription {
  id            String   @id @default(uuid())
  medicalRecord String   @map("medical_record")
  patientName   String   @map("patient_name")
  medicine      String
  unit          String
  dose          String
  via           String
  posology      String
  treatmentDays String[] @map("treatment_days")

  @@map("prescriptions")
}
