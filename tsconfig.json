{
	"compilerOptions": {
		"target": "es2020",
		"module": "CommonJS",
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true
	}
}
